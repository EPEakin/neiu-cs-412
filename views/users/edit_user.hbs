<div class="container-fluid m-2">
    {{> user_messages}}
</div>

<div class="container-fluid">
    <div class="mx-auto pb-4">
        <img class="backpack" src= "../assets/images/backpack.jpeg" alt="backpack" width="100">
    </div>
</div>

<form method="post" action="/users/update_info">
    <input type="hidden" name="id" value="{{id}}"/>

    <div class="container-fluid">
        <div class="form-group">
            <label class="col-form-label font-weight-bold pb-0" for="school">Your School's Name: </label>
            <input class="form-control col-sm-10" type="text" name="school" value="{{school}}"/> <br/>
        </div>

        <div class="form-group">
            <label class="col-form-label font-weight-bold pb-0" for="subject">Your School's Name: </label>
            <input class="form-control col-sm-10" type="text" name="subject" value="{{subject}}"/> <br/>
        </div>

        <div class="form-group row justify-content-center pt-3" >
            <input id="submit-bar" class="col-xs-3 btn btn-primary" type="submit" value="Submit" />
        </div>
    </div>
</form>
