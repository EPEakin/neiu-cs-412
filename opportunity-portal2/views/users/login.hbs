<div class="container mt-2">
    <div class="row justify-content-center">
    </div>
</div>

<div class="container-fluid m-2">
    {{> user_messages}}
</div>

<form method="post" action="/users/login" class="container p-4">
    <div class="form-group">
        <label class="control-label font-weight-bold mb-0" for="email">Email:</label>
        <input type="email" class="form-control col-sm-10" id="email" name="email" placeholder="email@example.com">
    </div>
    <div class="form-group">
        <label class="control-label font-weight-bold mb-0 mt-2" for="password">Password:</label>
        <input type="password" class="form-control col-sm-10" id="password" name="password" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary mt-2">Sign in</button>
</form>